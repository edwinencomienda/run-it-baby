
{
  "name": "run-it-baby",
  "displayName": "Run It Baby",
  "description": "A VS Code extension to run commands on file save.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:run-it-baby.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "run-it-baby.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "title": "Run It Baby",
      "properties": {
        "run-it-baby.commands": {
          "type": "array",
          "default": [],
          "description": "An array of commands to execute on file save.",
          "items": {
            "type": "object",
            "properties": {
              "command": {
                "type": "string",
                "description": "The command to execute."
              },
              "languages": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "The languages this command applies to."
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
